%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label :username
    %br/
    = f.text_field :username
  %p
    = f.label :email
    %br/
    = f.text_field :email
  %p
    = f.label :password
    %br/
    = f.password_field :password
  %p
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %p
    = f.label :city
    %br/
    = f.text_field :city
  %p
    = f.label :twitter
    %br/
    = f.text_field :twitter, :limit => 64
  %p
    = f.label :github
    %br/
    = f.text_field :github, :limit => 64
  %p
    = f.label :weapons
    %br/
    = f.text_field :weapons
  %p= f.submit "Sign Up"
= render :partial => "devise/shared/links"
